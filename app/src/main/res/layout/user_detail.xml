<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/detail_layout_margin"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_frag_user_image"
            android:layout_width="@dimen/detail_image_width"
            android:layout_height="@dimen/detail_image_height"
            android:layout_gravity="center"
            android:src="@drawable/ic_user" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/user_name_text"
            android:layout_marginTop="@dimen/detail_text_margin_top"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textColor="@color/primary_text_black"
            android:id="@+id/tv_frag_user_name"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_frag_user_id"
            android:layout_marginTop="@dimen/detail_text_margin_top"
            android:layout_gravity="center"
            android:textColor="@color/secondary_text_black"
            android:text="@string/user_id_text"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_frag_user_email"
            android:layout_marginTop="@dimen/detail_text_margin_top"
            android:layout_gravity="center"
            android:textColor="@color/secondary_text_black"
            android:text="@string/user_email_text"/>


        <Button
            android:id="@+id/btn_fetch_post"
            android:layout_width="@dimen/button_width"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/button_margin_top"
            android:background="@drawable/selector_fetch_post"
            android:text="@string/fetch_post_text_button"
            android:layout_gravity="center"
            android:textColor="@color/primary_text" />

        <Button
            android:id="@+id/btn_more_details"
            android:layout_width="@dimen/button_width"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/button_margin_top"
            android:background="@drawable/selector_fetch_post"
            android:text="More Detail"
            android:layout_gravity="center"
            android:textColor="@color/primary_text" />
    </LinearLayout>
</ScrollView>
